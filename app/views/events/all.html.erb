<div class="container mx-auto p-8">
  <h1 class="text-4xl font-bold mb-6 text-white">All Events</h1>
  <div id="default-carousel" class="relative w-full" data-carousel="slide">
    <!-- Carousel wrapper -->
    <div class="relative h-56 overflow-hidden rounded-lg md:h-96">
      <% @events.each_with_index do |event, index| %>
        <div class="hidden duration-700 ease-in-out" data-carousel-item <%= "data-carousel-item" if index == 0 %>>
          <%# Use event-specific images or fall back to a default %>
          <% case event.name %>
          <% when "Summer Music Festival" %>
            <%= image_tag "wavy-background.jpg", alt: event.name, class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
          <% when "Art Exhibition Gala" %>
            <%= image_tag "art.png", alt: event.name, class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
          <% when "Charity Run Event" %>
            <%= image_tag "charity-run.png", alt: event.name, class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
          <% when "Food Truck Festival" %>
            <%= image_tag "event4.png", alt: event.name, class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
          <% when "Comedy Night Show" %>
            <%= image_tag "event6.png", alt: event.name, class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
          <% when "Tech Meetup" %>
            <%= image_tag "event3.png", alt: event.name, class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
          <% when "Yoga Retreat Day" %>
            <%= image_tag "evnt.png", alt: event.name, class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
          <% when "Book Club Gathering" %>
            <%= image_tag "art1.png", alt: event.name, class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
          <% when "Dance Party Night" %>
            <%= image_tag "events1.png", alt: event.name, class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
          <% when "Film Screening Event" %>
            <%= image_tag "run1.png", alt: event.name, class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
          <% else %>
            <%= image_tag "image2.jpg", alt: event.name, class: "absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" %>
          <% end %>
        </div>
      <% end %>
    </div>
    <!-- Slider indicators -->
    <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
      <% @events.each_with_index do |_, index| %>
        <button type="button" class="w-3 h-3 rounded-full <%= index == 0 ? 'bg-blue-500' : 'bg-gray-300' %>" aria-current="<%= index == 0 %>" aria-label="Slide <%= index + 1 %>" data-carousel-slide-to="<%= index %>"></button>
      <% end %>
    </div>
    <!-- Slider controls -->
    <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
      <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
        <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
        </svg>
        <span class="sr-only">Previous</span>
      </span>
    </button>
    <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
      <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
        <svg class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
        </svg>
        <span class="sr-only">Next</span>
      </span>
    </button>
  </div>

  <!-- Recommendations Section -->
  <h2 class="text-3xl font-bold mt-10 mb-6 text-white">Recommendations</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @events.each do |event| %>
      <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg h-80">
        <% case event.name %>
        <% when "Summer Music Festival" %>
          <%= image_tag "wavy-background.jpg", alt: event.name, class: "w-full h-40 object-cover" %>
        <% when "Art Exhibition Gala" %>
          <%= image_tag "art.png", alt: event.name, class: "w-full h-40 object-cover" %>
        <% when "Charity Run Event" %>
          <%= image_tag "charity-run.png", alt: event.name, class: "w-full h-40 object-cover" %>
        <% when "Food Truck Festival" %>
          <%= image_tag "event4.png", alt: event.name, class: "w-full h-40 object-cover" %>
        <% when "Comedy Night Show" %>
          <%= image_tag "event6.png", alt: event.name, class: "w-full h-40 object-cover" %>
        <% when "Tech Meetup" %>
          <%= image_tag "event3.png", alt: event.name, class: "w-full h-40 object-cover" %>
        <% when "Yoga Retreat Day" %>
          <%= image_tag "evnt.png", alt: event.name, class: "w-full h-40 object-cover" %>
        <% when "Book Club Gathering" %>
          <%= image_tag "art1.png", alt: event.name, class: "w-full h-40 object-cover" %>
        <% when "Dance Party Night" %>
          <%= image_tag "events1.png", alt: event.name, class: "w-full h-40 object-cover" %>
        <% when "Film Screening Event" %>
          <%= image_tag "run1.png", alt: event.name, class: "w-full h-40 object-cover" %>
        <% else %>
          <%= image_tag "image2.jpg", alt: event.name, class: "w-full h-40 object-cover" %>
        <% end %>
        <div class="p-4 text-white flex-1 flex flex-col justify-end">
          <h3 class="text-xl font-bold mb-2"><%= event.name %></h3>
          <p class="text-sm">Date: <%= event.date %></p>
          <p class="text-sm">Venue: <%= event.venue %></p>
          <p class="text-sm">Price: <%= number_to_currency(event.price) %></p>
          <p class="text-sm">Tickets Available: <%= event.tickets_available %></p>
          <% if user_signed_in? && event.tickets_available > 0 %>
            <%= form_with url: "/cart/add_item", method: :post do %>
              <%= hidden_field_tag :event_id, event.id %>
              <%= number_field_tag :quantity, 1, min: 1, max: event.tickets_available, class: "p-1 bg-gray-700 text-white w-16 mt-2" %>
              <%= submit_tag "Add to Cart", class: "bg-blue-500 text-white px-2 py-1 rounded hover:bg-blue-600 mt-2" %>
            <% end %>
          <% elsif event.tickets_available == 0 %>
            <p class="text-red-500 mt-2">Out of Stock</p>
          <% else %>
            <%= link_to "Log in to Add to Cart", new_user_session_path, class: "text-blue-400 mt-2" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>      

</div>