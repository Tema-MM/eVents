<div class="container mx-auto p-8">
    <h1 class="text-4xl font-bold mb-6 text-white">All Events</h1>
    <div class="flex items-center justify-between mb-4">
      <div class="space-x-2">
        <%= link_to "Upcoming", all_events_path(scope: "upcoming"), class: @scope == "upcoming" ? "underline" : "" %>
        <%= link_to "Past", all_events_path(scope: "past"), class: @scope == "past" ? "underline" : "" %>
      </div>
      <div>
        <%= link_to "Back to Home", root_path, class: "text-blue-400" %>
      </div>
    </div>

    <!-- Recommendations Section -->
    <h2 class="text-3xl font-bold mt-10 mb-6 text-white">Recommendations</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @events.each do |event| %>
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg">
          <% case event.name %>
          <% when "Summer Music Festival" %>
            <%= image_tag "wavy-background.jpg", alt: event.name, class: "w-full h-40 object-cover" %>
          <% when "Art Exhibition Gala" %>
            <%= image_tag "art.png", alt: event.name, class: "w-full h-40 object-cover" %>
          <% when "Charity Run Event" %>
            <%= image_tag "charity-run.png", alt: event.name, class: "w-full h-40 object-cover" %>
          <% when "Food Truck Festival" %>
            <%= image_tag "event4.png", alt: event.name, class: "w-full h-40 object-cover" %>
          <% when "Comedy Night Show" %>
            <%= image_tag "event6.png", alt: event.name, class: "w-full h-40 object-cover" %>
          <% when "Tech Meetup" %>
            <%= image_tag "event3.png", alt: event.name, class: "w-full h-40 object-cover" %>
          <% when "Yoga Retreat Day" %>
            <%= image_tag "evnt.png", alt: event.name, class: "w-full h-40 object-cover" %>
          <% when "Book Club Gathering" %>
            <%= image_tag "art1.png", alt: event.name, class: "w-full h-40 object-cover" %>
          <% when "Dance Party Night" %>
            <%= image_tag "events1.png", alt: event.name, class: "w-full h-40 object-cover" %>
          <% when "Film Screening Event" %>
            <%= image_tag "run1.png", alt: event.name, class: "w-full h-40 object-cover" %>
          <% else %>
            <%= image_tag "image2.jpg", alt: event.name, class: "w-full h-40 object-cover" %>
          <% end %>
          <!-- Details section (cut-out panel) -->
          <div class="p-4 bg-gray-900 text-white">
            <h3 class="text-xl font-bold mb-2 truncate" title="<%= event.name %>"><%= event.name %></h3>
            <div class="grid grid-cols-2 gap-2 text-sm">
              <div>
                <p class="opacity-80">Date</p>
                <p><%= event.date %></p>
              </div>
              <div>
                <p class="opacity-80">Venue</p>
                <p class="truncate" title="<%= event.venue %>"><%= event.venue %></p>
              </div>
              <div>
                <p class="opacity-80">Price</p>
                <p><%= number_to_currency(event.price) %></p>
              </div>
              <div>
                <p class="opacity-80">Available</p>
                <p><%= event.tickets_available %></p>
              </div>
            </div>

            <div class="mt-3">
              <%= link_to "View Details", event_path(event), class: "inline-block bg-gray-700 hover:bg-gray-600 text-white px-3 py-1 rounded" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="flex items-center justify-center space-x-2 mt-8">
      <% if @page > 1 %>
        <%= link_to "Prev", all_events_path(scope: @scope, page: @page - 1, per_page: @per_page), class: "px-3 py-1 bg-gray-700 rounded" %>
      <% end %>
      <span>Page <%= @page %> of <%= @total_pages %></span>
      <% if @page < @total_pages %>
        <%= link_to "Next", all_events_path(scope: @scope, page: @page + 1, per_page: @per_page), class: "px-3 py-1 bg-gray-700 rounded" %>
      <% end %>
    </div>

  </div>