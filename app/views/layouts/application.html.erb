<!DOCTYPE html>
<html>
  <head>
    <title>Events</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet" />
    <style>
      body {
        background: linear-gradient(to bottom, #000000, #4b0082, #ff0000);
        background-size: cover;
        background-attachment: fixed;
      }
    </style>
  </head>

  <body class="text-white font-inter">
    <div class="fixed top-4 right-4 z-50 space-y-3">
      <% flash.each do |type, message| %>
        <% bg = case type.to_s
               when 'notice', 'success' then 'bg-green-600'
               when 'alert', 'error' then 'bg-red-600'
               else 'bg-gray-700'
               end %>
        <div data-controller="flash" class="text-white shadow-lg rounded-lg px-4 py-3 min-w-[280px] max-w-sm flex items-start gap-3 <%= bg %> bg-opacity-90 backdrop-blur-sm animate-[fadeIn_.2s_ease-out]">
          <div class="pt-0.5">
            <% if ['notice','success'].include?(type.to_s) %>
              <!-- check icon -->
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-7.25 7.25a1 1 0 01-1.414 0l-3-3a1 1 0 111.414-1.414l2.293 2.293 6.543-6.543a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
            <% else %>
              <!-- exclamation icon -->
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.72-1.36 3.485 0l6.518 11.591c.75 1.334-.213 2.985-1.742 2.985H3.48c-1.53 0-2.492-1.651-1.742-2.985L8.257 3.1zM11 14a1 1 0 10-2 0 1 1 0 002 0zm-1-2a1 1 0 01-1-1V7a1 1 0 112 0v4a1 1 0 01-1 1z" clip-rule="evenodd"/></svg>
            <% end %>
          </div>
          <div class="flex-1 text-sm leading-5"><%= message %></div>
          <button type="button" class="opacity-80 hover:opacity-100" data-action="click->flash#close">âœ•</button>
        </div>
      <% end %>
    </div>

    <nav class="flex justify-between items-center p-4 bg-black/50">
      <div class="text-white font-bold">SOCIETY SOCIALS</div>
      <ul class="flex space-x-4">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Events", "/all-events" %></li>

        <li>
          <%= link_to cart_path, class: "relative" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <% total_items = session[:cart]&.values&.sum || 0 %>
            <% if total_items > 0 %>
              <span class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full px-2 py-1"><%= total_items %></span>
            <% end %>
          <% end %>
        </li>
        
      </ul>
      <ul class="flex space-x-4">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li><%= link_to "Admin Dashboard", admin_dashboard_events_path, class: "text-yellow-400 hover:text-yellow-300" %></li>
          <% end %>
          <li><%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete } %></li>
        <% else %>
          <li><%= link_to "Log In", new_user_session_path %></li>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <% end %>
        <!-- Checkout Icon -->
        
      </ul>
    </nav>

    <%= yield %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
  </body>
</html>