<div class="container mx-auto p-8">
  <h1 class="text-3xl font-bold mb-4">My Account</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-gray-800 text-white rounded-lg p-4">
      <h2 class="text-xl font-semibold mb-2">Profile</h2>
      <p><span class="font-semibold">Name:</span> <%= current_user.respond_to?(:name) && current_user.name.present? ? current_user.name : "-" %></p>
      <p><span class="font-semibold">Email:</span> <%= current_user.email %></p>
      <div class="mt-3">
        <%= link_to "Edit Profile", edit_user_registration_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded" %>
      </div>
    </div>

    <div class="md:col-span-2 bg-gray-800 text-white rounded-lg p-4">
      <h2 class="text-xl font-semibold mb-2">Recent Purchases</h2>
      <% if @recent_purchases.any? %>
        <table class="w-full border-collapse mb-4">
          <thead>
            <tr class="bg-gray-700">
              <th class="p-2 text-left">Event</th>
              <th class="p-2 text-left">Type</th>
              <th class="p-2 text-left">Qty</th>
              <th class="p-2 text-left">Total</th>
              <th class="p-2 text-left">Purchased</th>
              <th class="p-2 text-left">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @recent_purchases.each do |p| %>
              <tr class="border-b border-gray-700">
                <td class="p-2"><%= p.event.name %></td>
                <td class="p-2"><%= p.respond_to?(:ticket_type) && p.ticket_type.present? ? p.ticket_type : 'Adult' %></td>
                <td class="p-2"><%= p.quantity %></td>
                <td class="p-2"><%= number_to_currency(p.total_price) %></td>
                <td class="p-2"><%= p.purchased_at.strftime("%d %b %Y %H:%M") %></td>
                <td class="p-2 whitespace-nowrap align-middle">
                  <div class="inline-flex items-center gap-2">
                    <%= link_to "Download PDF", download_tickets_path(format: :pdf, purchase_ids: [p.id]), class: "inline-flex items-center bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded" %>
                    <%= button_to "Email Tickets", send_tickets_path, method: :post, params: { purchase_ids: [p.id] }, form: { class: "inline-block align-middle" }, class: "inline-flex items-center bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "See all tickets", my_tickets_path, class: "text-indigo-400 hover:text-indigo-300 underline" %>
      <% else %>
        <p class="text-gray-300">No purchases yet. <%= link_to "Browse events", all_events_path, class: "text-indigo-400 hover:text-indigo-300 underline" %></p>
      <% end %>
    </div>
  </div>
</div>
