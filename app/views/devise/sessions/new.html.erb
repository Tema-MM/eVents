<div class="min-h-screen bg-gradient-to-br from-gray-100 to-gray-300 flex items-center justify-center p-4">
  <div class="bg-blue-600 rounded-2xl shadow-2xl w-full max-w-md p-6">
    <div class="flex justify-center mb-6">
      <%= link_to "Sign up", new_user_registration_path, class: "px-4 py-2 text-blue-200 hover:text-white transition-colors mr-4" %>
      <div class="px-4 py-2 text-white font-medium border-b-2 border-white">
        Sign in
      </div>
    </div>

    <h2 class="text-2xl font-bold text-white text-center mb-6">Welcome Back</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <% if flash[:alert] %>
        <div class="bg-red-500 bg-opacity-90 text-white p-3 rounded-lg text-sm mb-4">
          <%= flash[:alert] %>
        </div>
      <% end %>
      
      <div class="space-y-2">
        <label class="block text-white text-sm font-medium">Email</label>
        <%= f.email_field :email, 
          placeholder: "Enter your email", 
          autofocus: true,
          class: "w-full bg-white bg-opacity-20 text-blue-600 placeholder-white placeholder-opacity-70 p-3 rounded-lg border border-blue-400 focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent transition-all" %>
      </div>
      
      <div class="space-y-2">
        <label class="block text-white text-sm font-medium">Password</label>
        <%= f.password_field :password, 
          placeholder: "Enter your password",
          class: "w-full bg-white bg-opacity-20 text-blue-600 placeholder-white placeholder-opacity-70 p-3 rounded-lg border border-blue-400 focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent transition-all" %>
      </div>
      
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "w-4 h-4 text-blue-600 bg-white border-white rounded focus:ring-white" %>
          <label class="ml-2 text-white text-sm">
            <%= f.label :remember_me %>
          </label>
        </div>
      <% end %>
      
      <div class="pt-4">
        <%= f.submit "Sign in", placeholder: "Login", class: "w-full bg-white text-blue-600 font-bold py-3 px-4 rounded-lg transition-all duration-200 transform hover:scale-105 hover:shadow-lg" %>
      </div>
    <% end %>
    
    <div class="text-center mt-6">
      <p class="text-white text-sm">
        Don't have an account? 
        <%= link_to "Sign up", new_user_registration_path, class: "text-white underline hover:text-blue-200 font-medium" %>
      </p>
    </div>
  </div>
</div>