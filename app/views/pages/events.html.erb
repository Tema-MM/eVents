<!-- Create app/views/pages/events.html.erb -->
<div class="container mx-auto p-8">
  <!-- Featured Events Section -->
  <div class="bg-indigo-950 rounded-t-lg p-6">
    <h2 class="text-4xl font-bold text-Blue mb-2">Featured Events</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <% @events.first(3).each_with_index do |event, index| %>
        <div class="bg-gray-800 rounded overflow-hidden">
          <img src="https://placehold.co/400x250?text=<%= event['name'].gsub(' ', '+') %>" alt="<%= event['name'] %>" class="w-full h-48 object-cover">
          <div class="p-4">
            <p class="text-white font-bold">R100 - R300</p> <!-- Placeholder price -->
            <h3 class="text-xl text-white"><%= event['name'] %></h3>
            <p class="text-gray-400"><%= Date.parse(event['date']).strftime("%d %b") %> | Grand Chapiteau</p> <!-- Placeholder location -->
          </div>
          <div class="px-4 pb-4">
            <%= link_to "Get Tickets →", event_path(event['date']), class: "block text-center bg-purple-900 text-white px-4 py-2 rounded hover:bg-purple-800 #{'bg-white text-black' if index == 2}" %> <!-- Match button colors from image -->
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Trending Categories Section -->
  <div class="bg-indigo-950 rounded-b-lg p-6">
    <h2 class="text-4xl font-bold text-white mb-2">Trending Categories</h2>
    <p class="text-gray-300 mb-6">Be sure not to miss these Event today.</p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <% categories = [
        {name: "Fashion", img: "https://placehold.co/300x200?text=Fashion"},
        {name: "Music", img: "https://placehold.co/300x200?text=Music"},
        {name: "Lifestyle", img: "https://placehold.co/300x200?text=Lifestyle"},
        {name: "Art", img: "https://placehold.co/300x200?text=Art"}
      ] %>
      <% categories.each do |cat| %>
        <div class="bg-gray-800 rounded overflow-hidden">
          <img src="<%= cat[:img] %>" alt="<%= cat[:name] %>" class="w-full h-40 object-cover">
          <div class="p-4 flex items-center justify-between">
            <h3 class="text-white text-lg"><%= cat[:name] %></h3>
            <button class="bg-black text-white px-4 py-1 rounded hover:bg-gray-700">Preview →</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>